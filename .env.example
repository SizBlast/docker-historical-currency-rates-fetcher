# Put your API key here
FREECURRENCY_API_KEY=your_real_api_key_here

# Base currency to normalize rates (kept as 1.0 in CSV)
BASE_CURRENCY=USD

# Where CSV files are stored inside the container (volume maps host ./data to /data)
DATA_DIR=/data

# Start scanning from this year inclusive
START_YEAR=2023

# Comma-separated currencies you want (if commented, default list in script used)
# CURRENCIES=USD,EUR,GBP,JPY,CNY,INR,AUD,CAD,CHF,SEK,NOK,DKK,SGD,HKD,KRW,ZAR,BRL,MXN,TRY

# Cron schedule (standard crontab format)
CRON_SCHEDULE="0 3 * * *"

# Allow partial month retrieval if monthly quota can't cover entire month
ALLOW_PARTIAL_MONTH=true

# Safety buffer: requests reserved in monthly quota (status call doesn't count but buffer helps)
SAFETY_BUFFER=1

# Maximum requests allowed per minute (client-side)
MAX_REQUESTS_PER_MINUTE=10

# Retry settings
MAX_RETRIES=4
RETRY_BASE_SECONDS=1.0

# Timeout for requests (seconds)
REQUEST_TIMEOUT=30

# File lock timeout (seconds) when acquiring lock on YYYY-MM.csv.lock
FILELOCK_TIMEOUT=15.0
